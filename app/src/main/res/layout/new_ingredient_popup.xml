<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/new_ingredient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredient Name"
        android:minHeight="48dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <EditText
        android:id="@+id/new_ingredient_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Units (cup, tablespoon, etc)"
        android:minHeight="48dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_ingredient_name" />

    <TextView
        android:id="@+id/enter_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Quantity:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_ingredient_units"
        app:layout_constraintVertical_bias="0.164" />

    <EditText
        android:id="@+id/current_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="0"
        android:inputType="number"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toEndOf="@+id/enter_quantity_text"
        app:layout_constraintTop_toBottomOf="@+id/new_ingredient_units"
        app:layout_constraintVertical_bias="0.142" />

    <ImageView
        android:id="@+id/decrease_quantity_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/increase_quantity_popup"
        android:src="@drawable/decrease_quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/current_quantity"
        app:layout_constraintTop_toBottomOf="@+id/new_ingredient_units"
        app:layout_constraintVertical_bias="0.176" />

    <ImageView
        android:id="@+id/increase_quantity_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@id/remove"
        android:src="@drawable/increase_quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toEndOf="@+id/decrease_quantity_popup"
        app:layout_constraintTop_toBottomOf="@+id/new_ingredient_units"
        app:layout_constraintVertical_bias="0.176"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/add_new_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:text="Add Ingredient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_quantity_text"
        app:layout_constraintVertical_bias="0.107" />

    <Button
        android:id="@+id/cancel_new_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_new_ingredient"
        app:layout_constraintVertical_bias="0.219" />

    <CheckBox
        android:id="@+id/no_units_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Units (for items measured individually, ie eggs)"
        app:layout_constraintBottom_toTopOf="@+id/current_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_ingredient_units"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>